<div
  id="loading-animation"
  style="display: none;" 
  class="fixed inset-0 flex items-center justify-center bg-white dark:bg-gray-900 z-50"
>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 400">
        <defs>
          <!-- Gradient for manga page effect -->
          <linearGradient id="pageGradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#ffffff"/>
            <stop offset="50%" style="stop-color:#f0f0f0"/>
            <stop offset="100%" style="stop-color:#ffffff"/>
          </linearGradient>
          
          <!-- Glowing effect -->
          <filter id="glow">
            <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
            <feMerge>
              <feMergeNode in="coloredBlur"/>
              <feMergeNode in="SourceGraphic"/>
            </feMerge>
          </filter>
      
          <!-- Manga page turning effect -->
          <clipPath id="pageClip">
            <path d="M200,100 Q300,100 300,200 L300,300 Q200,300 200,200 Z">
              <animate attributeName="d"
                       dur="2s"
                       repeatCount="indefinite"
                       values="M200,100 Q300,100 300,200 L300,300 Q200,300 200,200 Z;
                              M150,100 Q250,100 250,200 L250,300 Q150,300 150,200 Z;
                              M200,100 Q300,100 300,200 L300,300 Q200,300 200,200 Z"/>
            </path>
          </clipPath>
        </defs>
      
        <!-- Background circle -->
        <circle cx="200" cy="200" r="150" fill="#f8f8f8" stroke="#e0e0e0" stroke-width="2">
          <animate attributeName="r"
                   values="150;155;150"
                   dur="2s"
                   repeatCount="indefinite"/>
        </circle>
      
        <!-- Manga pages turning effect -->
        <g clip-path="url(#pageClip)">
          <rect x="150" y="100" width="150" height="200" fill="url(#pageGradient)">
            <animate attributeName="x"
                     values="150;100;150"
                     dur="2s"
                     repeatCount="indefinite"/>
          </rect>
        </g>
      
        <!-- Loading text with manga style -->
        <text x="200" y="350" text-anchor="middle" font-family="Arial Black" font-size="24" fill="#333">
          Loading
          <animate attributeName="opacity"
                   values="1;0.3;1"
                   dur="1.5s"
                   repeatCount="indefinite"/>
        </text>
      
        <!-- Manga style speed lines -->
        <g stroke="#666" stroke-width="1" opacity="0.5">
          <line x1="50" y1="200" x2="100" y2="200">
            <animate attributeName="x2"
                     values="100;80;100"
                     dur="0.5s"
                     repeatCount="indefinite"/>
          </line>
          <line x1="300" y1="200" x2="350" y2="200">
            <animate attributeName="x1"
                     values="300;320;300"
                     dur="0.5s"
                     repeatCount="indefinite"/>
          </line>
        </g>
      
        <!-- Energy particles -->
        <g fill="#FF4D94" filter="url(#glow)">
          <circle cx="200" cy="200" r="3">
            <animate attributeName="cy"
                     values="200;180;200"
                     dur="1s"
                     repeatCount="indefinite"/>
            <animate attributeName="opacity"
                     values="1;0.2;1"
                     dur="1s"
                     repeatCount="indefinite"/>
          </circle>
          <circle cx="220" cy="200" r="3">
            <animate attributeName="cy"
                     values="200;220;200"
                     dur="1.2s"
                     repeatCount="indefinite"/>
            <animate attributeName="opacity"
                     values="1;0.2;1"
                     dur="1.2s"
                     repeatCount="indefinite"/>
          </circle>
          <circle cx="180" cy="200" r="3">
            <animate attributeName="cy"
                     values="200;190;200"
                     dur="0.8s"
                     repeatCount="indefinite"/>
            <animate attributeName="opacity"
                     values="1;0.2;1"
                     dur="0.8s"
                     repeatCount="indefinite"/>
          </circle>
        </g>
      
        <!-- Rotating manga panel frames -->
        <g stroke="#333" stroke-width="2" fill="none">
          <rect x="170" y="170" width="60" height="60">
            <animateTransform attributeName="transform"
                              type="rotate"
                              from="0 200 200"
                              to="360 200 200"
                              dur="4s"
                              repeatCount="indefinite"/>
          </rect>
          <rect x="160" y="160" width="80" height="80">
            <animateTransform attributeName="transform"
                              type="rotate"
                              from="360 200 200"
                              to="0 200 200"
                              dur="4s"
                              repeatCount="indefinite"/>
          </rect>
        </g>
      </svg>
</div>